{% extends "market/_layouts/cp" %}

{% set title = "Market"|t %}

{% set crumbs = [
{ label: "Market"|t, url: url('market') },
{ label: "Customers"|t, url: url('market/settings/customers') }
] %}

{% set content %}
<table id="customers" class="data fullwidth collapsible">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">User</th>
        <th scope="col">Email</th>
        <td></td>
    </tr>
    </thead>
    <tbody>
    {% for customer in customers %}
        <tr data-id="{{ customer.id }}">
            <th><a href="{{ customer.getCpEditUrl() }}">#{{ customer.id }}</a></th>
            <td data-title="User">
                {% if customer.user %}
                    <a href="{{ customer.user.getCpEditUrl() }}">{{ customer.user.name }}</a>
                {% else %}
                    (null)
                {% endif %}
            </td>
            <td data-title="Email">{{ customer.email ?: '(null)' }}</td>
            <td>
                <a class="edit icon" href="{{ customer.getCpEditUrl() }}"> Edit</a>
            </td>
        </tr>
    {% endfor %}

    </tbody>
</table>
{% endset %}
