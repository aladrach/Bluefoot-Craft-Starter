{% extends "market/_layouts/cp" %}

{% set crumbs = [
{ label: "Market Settings"|t, url: url('market/settings') },
] %}


{% set selectedTab = 'settings' %}
{% import "_includes/forms" as forms %}

{% set content %}
<form method="post" accept-charset="UTF-8" data-saveshortcut>
    <input type="hidden" name="action" value="market/orderSettings/save">
    <input type="hidden" name="redirect" value="market/settings/global">

    {{ getCsrfInput() }}
    {% if orderSettings.id %}<input type="hidden" name="orderSettingsId" value="{{ orderSettings.id }}">{% endif %}


    {% include "_includes/fieldlayoutdesigner" with {
    fieldLayout: orderSettings.getFieldLayout(),
    } only %}

    <hr>

    <div class="buttons">
        <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
    </div>
</form>

{% endset %}
